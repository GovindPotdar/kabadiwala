<div class="d-flex justify-content-center">
  <div class="card  mt-5 mb-5 " style="width: 25rem;">
    <div class="card-header bg-primary" >
      <h2>Pickup Address</h2>
    </div>
    <div class="card-body">
      <%= form_with model:[:users,pickup_address] do |f| %>
    
        <div class="field mb-3">
          <%= f.label :city_id,"Select City" %><br />
          <%= f.collection_select  :city_id, City.all,:id,:name,{},{class:"form-control",required:true} %>
          <div class="errors"><%=error pickup_address,:city%></div>

        </div>

        <div class="field mb-3">
          <%= f.label :address %><br />
          <%= f.text_area :address, autocomplete: "address", class:"form-control",required:true %>
          <div class="errors"><%=error pickup_address,:address%></div>

        </div>

        <div class="actions text-center">
          <%= f.submit class:"btn btn-primary" %>
        </div>
      <% end %>

    </div>
  </div>
</div>