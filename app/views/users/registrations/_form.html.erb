<%= form_with model: user,url: action_path ,data:{turbo: true} do |f| %>
    
  <div class="field mb-3">  
    <%= f.label :full_name %><br />
    <%= f.text_field :full_name, autofocus: true, class:"form-control"%>
    <div class="errors"><%=error user,:full_name%></div>
  </div>   

  <div class="field mb-3">  
    <%= f.label :mobile_number %><br />
    <%= f.number_field :mobile_number, autofocus: true, maxlength:12, minlength:10 , class:"form-control"%>
    <div class="errors"><%=error user,:mobile_number%></div>
  </div>

  <div class="field mb-3">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %>
    <div class="errors"><%=error user,:email%></div>
  </div>

  <% if user.new_record? %>
    <div class="field mb-3">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "new-password",class:"form-control" , required: true %>
      <div class="errors"><%=error user,:password%></div>
    </div>
          
    <div class="field mb-3">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control", required: true %>
      <div class="errors"><%=error user,:password_confirmation%></div>
    </div>
  <% end %>
  <div class="actions text-center">
    <%= f.submit submit_button_text,class:"btn btn-primary" %>
  </div>
<% end %>