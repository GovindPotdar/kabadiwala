<div class="d-flex justify-content-center">
  <div class="card  mt-5 mb-5 " style="width: 25rem;">
    <div class="card-header bg-primary" >
      <h2>Change your password</h2>
    </div>
    <div class="card-body">
      <%= form_with model:@user,url:users_password_path(params[:id]) do |f| %>
        <%= f.hidden_field :reset_password_token %>
       
        <div class="field mb-3">
          <%= f.label :password, "New password" %><br />
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form-control" ,required:true%>
          <div class="errors"><%=error @user,:password%></div>
        </div>
        
         <div class="field mb-3">
          <%= f.label :password_confirmation, "Confirm new password" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class:"form-control",required:true%>
          <div class="errors"><%=error @user,:password_confirmation%></div>
        </div>
        
        <div class="actions text-center mb-3">
          <%= f.submit "Submit",class:"btn btn-primary" %>
        </div>
      <% end %>

    
    </div>
  </div>
</div>




