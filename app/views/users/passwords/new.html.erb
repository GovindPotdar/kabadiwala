<div class="d-flex justify-content-center">
  <div class="card  mt-5 mb-5 " style="width: 25rem;">
    <div class="card-header bg-primary" >
      <h2>Forgot your password?</h2>
    </div>
    <div class="card-body">
      <%= form_with url:users_passwords_path do |f| %>
    
        <div class="field mb-3">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control",required:true %>
        </div>

        

        <div class="actions text-center mb-3">
          <%= f.submit "Send me reset password instructions",class:"btn btn-primary" %>
        </div>
      <% end %>

      <%= link_to "ðŸ‘‰Sign up", users_sign_up_path %><br />
      <%= link_to "ðŸ‘‰Log in", users_sign_in_path %><br />

    
    </div>
  </div>
</div>